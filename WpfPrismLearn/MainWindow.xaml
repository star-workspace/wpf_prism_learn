<Window x:Class="WpfPrismLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:WpfPrismLearn.Views"
        prism:ViewModelLocator.AutoWireViewModel="True"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Background="{DynamicResource AppBackgroundBrush}"
        Title="Phase4: Regions" Height="600" Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- ヘッダー領域 -->
            <ContentControl Grid.Row="0" 
                        prism:RegionManager.RegionName="HeaderRegion"/>

            <Grid Grid.Row="1">
                <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Orientation="Horizontal" Margin="10" Panel.ZIndex="100">
                    <TextBlock Text="Dark Mode" VerticalAlignment="Center" Margin="0,0,5,0" 
                       Foreground="{DynamicResource AppForegroundBrush}"/>

                    <ToggleButton IsChecked="{Binding IsDarkMode}" />
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="30">

                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="◆ リソース参照の実験 ◆" FontWeight="Bold" Margin="0,0,0,10"
                               Foreground="{DynamicResource AppForegroundBrush}"/>

                            <TextBlock Text="私は DynamicResource です (変わる)" 
                               Foreground="{DynamicResource AppForegroundBrush}" 
                               FontSize="16" Margin="0,5"/>

                            <TextBlock Text="私は StaticResource です (変わらない！)" 
                               Foreground="{StaticResource AppForegroundBrush}" 
                               FontSize="16" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Margin="20">
                <TextBlock Text="ここはメインウインドウの本体です。"
                       Margin="0,0,0,10"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                <TextBox Text="{Binding InputName, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Height="30"/>
                <Button Content="挨拶する"
                    Command="{Binding GreetCommand}"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
                <materialDesign:Card Margin="0,20,0,0" Padding="10" Background="#EEEEEE" UniformCornerRadius="6">
                    <TextBlock Text="{Binding ResultMessage}"
                           FontSize="14" 
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           TextWrapping="Wrap"/>
                </materialDesign:Card>

                <Border Margin="0,20,0,20" CornerRadius="8">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderThickness" Value="3"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConfirmedImageActive}" Value="True">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Red" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleConfirmedImageCommand}"/>
                    </Border.InputBindings>
                    
                    <materialDesign:Card Margin="0,20,0,20" Padding="10" Background="#E3F2FD">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="現在の選択画像：" 
                                       VerticalAlignment="Center" 
                                       FontWeight="Bold" 
                                       Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Image Source="{Binding ConfirmedImage.ImageUrl}" 
                                       Width="50" Height="40" Stretch="Uniform" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding ConfirmedImage.Title}" 
                                           VerticalAlignment="Center" 
                                           FontSize="16"
                                           Foreground="Blue"/>
                                </StackPanel>

                            <TextBlock Grid.Column="1" 
                                       Text="（まだ選択されていません）" 
                                       VerticalAlignment="Center" 
                                       Foreground="Gray"
                                       Visibility="{Binding ConfirmedImage, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                        </Grid>
                    </materialDesign:Card>
                </Border>


                <StackPanel Orientation="Horizontal" Margin="0,20,0,10">
                    <TextBlock Text="Gallery" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,20,0,10"/>

                    <Button Style="{StaticResource MaterialDesignIconButton}"
                        Command="{Binding ReloadCommand}" 
                        ToolTip="Reload from API"
                        Height="24" Width="24" Margin="10,0,0,0">
                        <materialDesign:PackIcon Kind="Refresh" />
                    </Button>
                </StackPanel>

                <ProgressBar IsIndeterminate="True" 
                         Style="{StaticResource MaterialDesignCircularProgressBar}"
                         Value="0"
                         Width="40" Height="40"
                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <ItemsControl ItemsSource="{Binding ImageItems}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="5" Width="120" UniformCornerRadius="8">
                                <materialDesign:Card.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                              Command="{Binding DataContext.SelectImageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                              CommandParameter="{Binding}" />
                                </materialDesign:Card.InputBindings>

                                <Grid>
                                    <StackPanel>
                                        <Image Source="{Binding ImageUrl}" Height="80" Stretch="UniformToFill"/>

                                        <TextBlock Text="{Binding Title}" 
                                               HorizontalAlignment="Center" 
                                               Margin="5"
                                               FontSize="12"/>
                                    </StackPanel>

                                    <materialDesign:PackIcon Kind="CheckCircle" 
                                                         Width="40" Height="40"
                                                         Foreground="LimeGreen"
                                                         HorizontalAlignment="Right"
                                                         VerticalAlignment="Top"
                                                         Margin="5"
                                                         Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <materialDesign:PackIcon.Effect>
                                            <DropShadowEffect ShadowDepth="0" Color="Black" BlurRadius="10"/>
                                        </materialDesign:PackIcon.Effect>
                                    </materialDesign:PackIcon>

                                    <Border Background="#44000000" 
                                        Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </StackPanel>

            <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Orientation="Horizontal" Margin="10" Panel.ZIndex="100">

                <TextBlock Text="Auto Play" VerticalAlignment="Center" Margin="0,0,5,0" 
                       Foreground="{DynamicResource AppForegroundBrush}"/>
                <ToggleButton IsChecked="{Binding IsAutoPlay}" Margin="0,0,20,0"/>

                <TextBlock Text="Dark Mode" VerticalAlignment="Center" Margin="0,0,5,0" 
                       Foreground="{DynamicResource AppForegroundBrush}"/>
                <ToggleButton IsChecked="{Binding IsDarkMode}" />
            </StackPanel>
        </Grid>

        <Grid Visibility="{Binding IsModalVisible, Converter={StaticResource BooleanToVisibilityConverter}}">

            <Border Background="Black" Opacity="0.5">
            </Border>

            <views:SimpleModal HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </Grid>
    </Grid>

    
    
</Window>
