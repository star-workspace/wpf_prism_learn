<Window x:Class="WpfPrismLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Phase4: Regions" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- ヘッダー領域 -->
        <ContentControl Grid.Row="0" 
                        prism:RegionManager.RegionName="HeaderRegion"/>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="ここはメインウインドウの本体です。" Margin="0,0,0,10"/>
            <TextBox Text="{Binding InputName, UpdateSourceTrigger=PropertyChanged}"
                     Height="30"/>
            <Button Content="挨拶する" Command="{Binding GreetCommand}"  Margin="0,10"/>
            <TextBlock Text="{Binding ResultMessage}" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
